<div id="content-wrapper">
  <div id="single-column-wrapper">
    <div id="content">
      <h1>Log In</h1>
      <div id="login_wrapper"> 
        <%= form_tag  sessions_path do %>
          <div id="email">
            <%= label_tag :email %>
            <%= text_field_tag :email, params[:email] %>
          </div>
          <div id="password">
            <%= label_tag :password %>
            <%= password_field_tag :password %>
          </div>
          <div id="remember_me">
            <%= check_box_tag :remember_me, 1, params[:remember_me] %>
            <%= label_tag :remember_me %>
          </div>
          <div id="submit_wrapper">
            <%= submit_tag "Log In" %>
          </div>
          <div id="forgot_password_wrapper">
            <p>
              <%= link_to "Forgot your password?", new_password_reset_path %>
            </p>
          </div>
        <% end %>
        <div id="create_account_wrapper">
          <p>
          <em>&mdash;or&mdash;</em>
          </p>
          <p>
            <%= link_to "Click here to create an account.", signup_path %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
