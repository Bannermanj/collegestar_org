<div id="redesign-summary-attachment-drop-zone-wrapper" class="hidden">
  <h3>Add Attachments</h3>
    <div class="field">
      <div class="field_content">
        <ul>
          <% @redesign_summary.attachments.each do |summary_attachment| %>
            <li><%= link_to summary_attachment.attachment.original_filename, summary_attachment.attachment.url, target: "_blank" %></li>
          <% end %>
        </ul>
      </div>
    </div>  
    <div id="attachment-upload-progress-wrapper">
    <div id="attachment-upload-progress" class="hidden">
      <div id="progress-bar" ></div>
    </div>
  </div>
  <div id="redesign-summary-attachment-drop-zone">
    Drop files here to add attachment(s), or click to choose file(s).    
  </div>
</div>
