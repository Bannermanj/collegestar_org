<div id="content-wrapper">
  <div id="single-column-wrapper">
    <div id="content">
      <h1><%= @shared_module_section.title %></h1>
      
      <%= render 'edit_form' %>
      <%= link_to( 
            fa_icon( 'arrow-left', text: 'Back to modules' ),
            udl_modules_path 
          ) %>      
      
      <h1>Danger Zone</h1>
        <p>
          <%= link_to( 
                fa_icon( 'minus', text: 'Delete this Section' ), 
                shared_module_section_path(slug: @shared_module_section.slug), 
                data: {
                  method: :delete,
                  confirm: "Are you sure you want to delete this section?"
                },
                class: 'delete-button' 
              ) %>
        </p>

    </div>
  </div>
</div>
