<p id="notice"><%= notice %></p>

<h1>Particpating Campuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
      <th>Type</th>
      <th>Director</th>
      <th>Website url</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campuses.each do |campus| %>
      <tr>
        <td><%= campus.name %></td>
        <td><%= campus.abbreviation %></td>
        <td><%= campus.institution_type %></td>
        <td><%= campus.director_id %></td>
        <td><%= campus.website_url %></td>
        <td><%= campus.address_1 %></td>
        <td><%= campus.address_2 %></td>
        <td><%= campus.city %></td>
        <td><%= campus.state %></td>
        <td><%= campus.zip %></td>
        <td><%= link_to 'Show', campus %></td>
        <td><%= link_to 'Edit', edit_campus_path(campus) %></td>
        <td><%= link_to 'Destroy', campus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

