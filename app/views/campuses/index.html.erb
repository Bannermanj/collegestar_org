<p id="notice"><%= notice %></p>

<h1>Listing Campuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Website</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>Director</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campuses.each do |campuse| %>
      <tr>
        <td><%= campuse.name %></td>
        <td><%= campuse.image %></td>
        <td><%= campuse.website %></td>
        <td><%= campuse.address_1 %></td>
        <td><%= campuse.address_2 %></td>
        <td><%= campuse.director %></td>
        <td><%= link_to 'Show', campuse %></td>
        <td><%= link_to 'Edit', edit_campuse_path(campuse) %></td>
        <td><%= link_to 'Destroy', campuse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

