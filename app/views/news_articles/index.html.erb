<div id="content-wrapper">
  <div id="single-column-wrapper">
    <div id="content">
      <p id="notice"><%= notice %></p>
      
      <h1>College STAR News</h1>
        <ul id="news_articles">
          <% @news_articles.each do |news_article| %>
            <li>
              <div class="news_article_wrapper">
                <h2><%= link_to news_article.title, news_article %></h2>
                <div class="thumb_nail">
                  <%= link_to( image_tag("seal-2x.png"), news_article ) %>
                </div>
                <div class="excerpt">
                  <p><%= news_article.excerpt.html_safe %></p>
                </div>
              </div>
            </li>
          <% end %>
       </ul> 
      <% if can? :create, @news_article %>
        <%= link_to 'New article', new_news_article_path %>
      <% end %>
    </div>
  </div>
</div>
