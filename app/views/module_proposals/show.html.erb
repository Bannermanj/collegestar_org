<div id="content-wrapper">
  <div id="single-column-wrapper">
    <div id="content">
      <h1><%= @module_proposal.title %></h1>
      <p><%= link_to( fa_icon( 'pencil', text: 'Edit this module' ), edit_module_proposal_path( @module_proposal ) ) %></p>
      
      <p>Faculty Member: <strong><%= @module_proposal.first_name %> <%= @module_proposal.last_name %></strong></p>
      <p>Email: <strong><%= @module_proposal.email %></strong></p>
      <p>University: <strong><%= @module_proposal.university %></strong></p>
      <p>Department: <strong><%= @module_proposal.department %></strong></p>
      
      <h2>Proposed Module</h2>
      <p>Module Type: <strong><%= @module_proposal.module_type %></strong></p> 
      <p>Working Title: <strong><%= @module_proposal.title %></strong></p>
      <p>Description: <strong><%= @module_proposal.description %></strong></p>
      <p>Estimated Start Date: <strong><%= @module_proposal.start_date.strftime("%m/%d/%Y") %></strong></p>
      <p>Estimated Completion Date: <strong><%= @module_proposal.completion_date.strftime("%m/%d/%Y") %></strong></p>
      <p><%= link_to "Back to Proposals", module_proposals_path %></p>
    </div>
  </div>
</div>
