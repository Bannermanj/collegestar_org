<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Registration open datetime</th>
      <th>Registration close datetime</th>
      <th>Max registrants</th>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Address</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.registration_open_datetime %></td>
        <td><%= event.registration_close_datetime %></td>
        <td><%= event.max_registrants %></td>
        <td><%= event.start_datetime %></td>
        <td><%= event.end_datetime %></td>
        <td><%= event.address %></td>
        <td><%= event.address_2 %></td>
        <td><%= event.city %></td>
        <td><%= event.state %></td>
        <td><%= event.zip_code %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

