<div id="content-wrapper">
  <div id="single-column-wrapper">
    <div id="content">
      <h1>Faculty Redesign Summaries</h1>
      <p>
        <%= link_to( 
                     fa_icon("plus", text: "New redesign summary"), 
                     new_profile_redesign_summary_path 
                   )
        %>
      </p>
     
      <div id="faculty-redesign-summaries-table-wrapper">
        <table id="faculty-redesign-summaries">
          <tr>
            <th>Faculty Member</th>
            <th>Department</th>
            <th>Submission Date</th>
          </tr>
          <% @redesign_summaries.each do |summary| %>
            <tr>
              <td><%= link_to "#{summary.user.first_name} #{summary.user.last_name}", edit_profile_redesign_summary_path(profile_id: @current_user, id: summary) %></td>
              <td><%= link_to summary.user.department, edit_profile_redesign_summary_path(profile_id: @current_user, id: summary) %></td>
              <td><%= link_to summary.created_at.strftime("%m/%d/%Y"), edit_profile_redesign_summary_path(profile_id: @current_user, id: summary) %>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
